<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/text_informazioni_personali"
        android:textSize="13pt" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:background="#000000" />

    <EditText
        android:id="@+id/edit_info_agg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_info_agg"
        android:layout_below="@+id/text_info_agg"
        android:hint="@string/hint_for_medical_information"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/text_cod_fiscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="18dp"
        android:text="@string/text_codice_fiscale"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edit_cod_fiscale"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_cod_fiscale"
        android:hint="@string/text_codice_fiscale"
        android:inputType="textCapCharacters" />

    <TextView
        android:id="@+id/text_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_cod_fiscale"
        android:text="@string/text_nome"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_nome"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_cognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_nome"
        android:text="@string/text_cognome"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edit_cognome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_cognome"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_data_nascita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_cognome"
        android:text="@string/text_data_nascita"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edit_data_nascita"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_data_nascita"
        android:hint="@string/hint_for_birth" />

    <TextView
        android:id="@+id/text_info_agg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_data_nascita"
        android:text="@string/text_info_aggiuntive"
        android:textSize="8pt" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_info_agg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/buttonOk" />

</RelativeLayout>